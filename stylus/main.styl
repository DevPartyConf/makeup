    trs()
.header__title_button
  margin 60px 0
.socials_bottom
  margin-bottom 50px
.socials a,
.socials li
  display inline-block
.socials a
  margin 0 10px
.socials__facebook
  width 24px
  height 24px
  background-image url("/img/social/facebook-white.png")
  background-size: contain
.socials__vk
  width 24px
  height 24px
