.header__title
  text-align center
.header__title__h
  color c-soft-blue
  text-transform uppercase
  font-size 100px
  font-weight bold
.header__title__h_red
  color c-red
.header__title_h2
  color white
  font-size 36px
  font-weight bold
.header__title_h2_blue, .header__title_h2 a:hover
  color c-soft-blue
  border-bottom 2px dotted
.button
  background c-soft-blue
  color white
  padding 13px 40px
