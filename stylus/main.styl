.year
  background c-dark-blue
  padding 8px 0
  text-align right
header
  background url(../img/bg.jpg)
  background-size cover
.menu__title
  display inline-block
  &:last-child a 
    padding-right 0
.menu__link
  color white
  padding 0 5px
  font-size 12px
  &:hover 
    color c-red
.menu__link_blue
  color c-soft-blue
.menu__link_current
  color white
.head 
  height 113px
  .container 
    top 30px
    position relative
.nav
  text-align right
  margin 30px 0
.nav__title
  display inline-block
  &:last-child a
    padding-right 0
.nav__link
  color white
  font-size 17px
  padding 0 18px
  font-weight bold
  &:hover
    color c-soft-blue
.nav__link_current
  color c-red
.logo
  display inline-block
  background-image: url("../img/logo/logo.png")
  width: 226px
  height: 67px
